{
  "app-id": "org.gnome.Quadrapassel",
  "runtime": "org.gnome.Platform",
  "runtime-version": "3.34",
  "sdk": "org.gnome.Sdk",
  "command": "quadrapassel",
  "finish-args": [
    "--share=ipc", "--socket=x11",
    "--socket=wayland",
    "--device=dri", "--socket=pulseaudio"
  ],
  "cleanup": [
    "/include", "/lib/pkgconfig",
    "/share/pkgconfig", "/share/aclocal",
    "/man", "/share/man", "/share/gtk-doc",
    "*.la", "*.a",
    "/lib/girepository-1.0",
    "/share/dbus-1", "/share/doc", "/share/gir-1.0"
  ],
  "modules": [
    {
      "name" : "gsound",
      "buildsystem" : "autotools",
      "sources" : [
        {
          "type" : "git",
          "url" : "https://gitlab.gnome.org/GNOME/gsound.git",
          "tag": "1.0.2",
          "commit:": "a86946b494aa32782b3f6334344d07b5c11d5219"
        }
      ]
    },
    {
      "name": "libevdev",
      "sources": [
        {
          "type": "git",
          "url": "https://gitlab.freedesktop.org/libevdev/libevdev.git",
          "tag": "libevdev-1.8.0",
          "commit": "779749b22c0dd62cadf9e147c97c5a7675a92478"
        }
      ]
    },
    {
      "name": "libmanette",
      "buildsystem": "meson",
      "sources": [
        {
          "type": "git",
          "url": "https://gitlab.gnome.org/aplazas/libmanette.git",
          "tag": "0.2.3",
          "commit": "8aacdcbcbf37d0e48a04ffc7dde11acb50ee628b"
        }
      ]
    },
    {
      "name": "quadrapassel",
      "buildsystem": "meson",
      "sources": [
        {
          "type": "archive",
          "url": "https://download.gnome.org/sources/quadrapassel/3.34/quadrapassel-3.34.0.tar.xz",
          "sha256": "2e8a1b3c99d1352a34133aa2b22f65ae9e1b986d8ebb7327902d27e06a9045d9"
        }
      ]
    }
  ]
}