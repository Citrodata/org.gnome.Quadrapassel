{
  "app-id": "org.gnome.Quadrapassel",
  "runtime": "org.gnome.Platform",
  "runtime-version": "3.36",
  "sdk": "org.gnome.Sdk",
  "command": "quadrapassel",
  "finish-args": [
    "--share=ipc", "--socket=fallback-x11",
    "--socket=wayland",
    "--device=dri", "--socket=pulseaudio"
  ],
  "cleanup": [
    "/include", "/lib/pkgconfig",
    "/share/pkgconfig", "/share/aclocal",
    "/man", "/share/man", "/share/gtk-doc",
    "*.la", "*.a",
    "/lib/girepository-1.0",
    "/share/dbus-1", "/share/doc", "/share/gir-1.0"
  ],
  "modules": [
    {
      "name" : "gsound",
      "buildsystem" : "autotools",
      "sources" : [
        {
          "type" : "archive",
          "url" : "https://download.gnome.org/sources/gsound/1.0/gsound-1.0.2.tar.xz",
          "sha256": "bba8ff30eea815037e53bee727bbd5f0b6a2e74d452a7711b819a7c444e78e53"
        }
      ]
    },
    {
      "name": "libevdev",
      "sources": [
        {
          "type": "git",
          "url": "https://gitlab.freedesktop.org/libevdev/libevdev.git",
          "tag": "libevdev-1.8.0",
          "commit": "779749b22c0dd62cadf9e147c97c5a7675a92478"
        }
      ]
    },
    {
      "name": "libmanette",
      "buildsystem": "meson",
      "sources": [
        {
          "type": "git",
          "url": "https://gitlab.gnome.org/aplazas/libmanette.git",
          "tag": "0.2.4",
          "commit": "e92a35af43853eee0ce255754e622dbe10e71f2a"
        }
      ]
    },
    {
      "name": "quadrapassel",
      "buildsystem": "meson",
      "sources": [
        {
          "type": "archive",
          "url": "https://download.gnome.org/sources/quadrapassel/3.36/quadrapassel-3.36.02.tar.xz",
          "sha256": "8bc65a6bf83094deb8792b656c95adde484e12d3ce35cf09f42ce67ee3bf0031"
        }
      ]
    }
  ]
}